<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://3x39fmt0aja34zifjfnu4695x-wpengine.netdna-ssl.com/wp-content/uploads/2018/06/180619-dinner-parties-top2.jpg);">
  <div class="container">
    <h1>MealShare brings <strong>people</strong> together to share <strong>meals & ideas</strong>.</h1>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control py-2 rounded-pill mr-2 pr-5 string required" type="text" name="search[query]" id="search_query" placeholder="Enter city to find your meal" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  </div>
</div>

<div class="container" align="center">
  <br>
  <br>
  <div class="btn btn-primary">
    <%= link_to 'Host', new_meal_path, :class => "btn" %>
  </div>

</div>

<br>
<br>

<div class="container">

 <div class="row">

   <% @meals.each do |meal| %>
   <%= link_to "", meal, class: "card-link" %>
   <div class="col-xs-12 col-md-4">
     <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://i.ibb.co/L93QRNJ/chris-lawton-165884-unsplash.jpg)">
       <div>
          <h3><%= meal.meal_type  %>:</h3><p>
          <h4><%= meal.title %></h4>
        </div>
      </div>
    </div>
    <% end %>

  </div>

</div>

