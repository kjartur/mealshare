<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://3x39fmt0aja34zifjfnu4695x-wpengine.netdna-ssl.com/wp-content/uploads/2018/06/180619-dinner-parties-top2.jpg);">
  <div class="container">
    <h1>MealShare brings <strong>people</strong> together to share <strong>meals & ideas</strong>.</h1>
    <%= render 'shared/searchbar', meals: @meals %>
  </div>
</div>

<div class="container" align="center">
  <br>
  <br>
  <div class="btn btn-primary">
    <%= link_to 'Host', new_meal_path, :class => "btn" %>
  </div>

</div>

<br>
<br>

<div class="container">

 <div class="row">

   <% @meals.each do |meal| %>
   <div class="col-xs-12 col-md-4">
     <div class="card-category"
     style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://i.ibb.co/L93QRNJ/chris-lawton-165884-unsplash.jpg)">
   <%= link_to "", meal_path(meal), class: "card-link" %>
     <div>
      <h3><%= meal.meal_type %>:</h3><p>
        <h4><%= meal.title %></h4>
      </div>
    </div>
   </div>
   <% end %>
 </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;
  margin: 20px auto;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
