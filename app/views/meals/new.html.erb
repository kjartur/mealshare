<%= simple_form_for @meal do |f| %>
  <%= f.input :meal_type, label: 'What type of meal do you want to organize: ', error: 'Meal type is mandatory, please specify one (breakfast lunch b)' %>
  <%= f.input :time%>
  <%= f.input :topic, placeholder:'What is the main topic of conversations?' %>
  <%= f.input :seats %>
  <%= f.button :submit %>
<% end %>
